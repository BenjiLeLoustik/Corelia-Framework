{% extends 'base.ctpl' %}

{% block style %}
<style>
	body {
		margin: 0;
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		background: #f0f2f5;
		color: #333;
		box-sizing: border-box;
	}

	.layout {
		display: flex;
		min-height: 100vh;
	}

	.sidebar {
		position: fixed;
		top: 0;
		left: 0;
		width: 300px;
		height: 100vh;
		background: #1f2937;
		color: #e0e7ff;
		padding: 30px 10px;
		box-sizing: border-box;
		display: flex;
		flex-direction: column;
		box-shadow: 2px 0 6px rgba(0, 0, 0, 0.15);
		overflow-y: auto;
	}

	.sidebar h2 {
		display: flex;
		align-items: center;
		gap: 10px;
		font-size: 1.6rem;
		margin-bottom: 25px;
		border-bottom: 2px solid #4f46e5;
		padding-bottom: 12px;
	}

	.sidebar h2 .emoji {
		font-size: 28px;
	}

	.sidebar a {
		display: flex;
		align-items: center;
		gap: 10px;
		padding: 12px 20px;
		margin-bottom: 14px;
		color: #c7c7c7;
		text-decoration: none;
		border-left: 4px solid transparent;
		border-radius: 4px 0 0 4px;
		transition: background .2s, color .3s, border-color .3s;
	}

	.sidebar a.active,
	.sidebar a:hover {
		background: rgba(255, 255, 255, 0.1);
		color: #fff;
		border-left-color: #4f46e5;
	}

	.sidebar a .emoji {
		font-size: 20px;
	}

	.main-content {
		margin-left: 300px;
		padding: 60px 40px;
		background: #f9fafb;
		flex: 1;
		box-sizing: border-box;
		display: flex;
		justify-content: center;
		align-items: flex-start;
	}

	.card {
		background: #fff;
		border-radius: 12px;
		box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
		overflow: hidden;
		width: 480px;
		text-align: center;
	}

	.card img.product-image {
		width: 300px;
		height: 300px;
		object-fit: cover;
		border-radius: 50%;
		margin: 24px auto 0;
		display: block;
		background-color: #888;
	}

	.card-body {
		padding: 24px;
	}

	.card-body h1 {
		margin: 0 0 12px;
		font-size: 2rem;
		color: #4f46e5;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 8px;
	}

	.card-body p {
		margin: 0 0 20px;
		font-size: 1rem;
		color: #4b5563;
		line-height: 1.5;
	}

	/* Nouvelle mise en page des specs */
	.specs-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
		gap: 16px;
		margin-bottom: 24px;
	}

	.spec-item {
		background: #eef2ff;
		border-radius: 8px;
		padding: 12px;
		display: flex;
		align-items: center;
		gap: 10px;
		box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
	}

	.spec-item .emoji {
		font-size: 1.4rem;
	}

	.spec-item span {
		font-size: 0.95rem;
		color: #1f2937;
		text-align: left;
	}

	.actions {
		display: flex;
		justify-content: space-between;
		gap: 12px;
	}

	.actions a,
	.actions button {
		width: 160px;
		height: 44px;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		background: #3b82f6;
		color: #fff;
		border: none;
		border-radius: 8px;
		font-weight: 600;
		text-decoration: none;
		cursor: pointer;
		transition: background 0.3s;
		font-size: 0.95rem;
	}

	.actions a.view {
		background: #10b981;
	}

	.actions a.edit {
		background: #fbbf24;
	}

	.actions button.delete {
		background: #ef4444;
	}

	.actions a:hover {
		filter: brightness(1.1);
	}

	.actions button.delete:hover {
		filter: brightness(0.9);
	}

	@media (max-width: 500px) {
		.sidebar {
			display: none;
		}

		.main-content {
			margin-left: 0;
			padding: 20px;
		}

		.card {
			width: 90%;
		}

		.actions {
			flex-direction: column;
		}

		.actions a,
		.actions button {
			width: 100%;
		}
	}
</style>
{% endblock %}

{% block content %}
<div class="layout">
	<aside class="sidebar">
		<h2><span class="emoji">🛠️</span> Administration</h2>
		<a href="/admin" class="active"><span class="emoji">🏠</span> Accueil</a>
		<a href="/admin/products"><span class="emoji">📦</span> Produits</a>
		<a href="/admin/settings"><span class="emoji">⚙️</span> Paramètres</a>
		<a href="/admin/logs"><span class="emoji">📜</span> Logs</a>
		<a href="/"><span class="emoji">🔙</span> Retour</a>
	</aside>

	<main class="main-content" role="main">
		<div class="card">
			<img class="product-image" src="https://via.placeholder.com/300/888888/FFFFFF?text=Produit" alt="Produit" />
			<div class="card-body">
				<h1><span class="emoji">🔍</span> {{ product.getName() }}</h1>
				<p>{{ product.getDescription() }}</p>

				<div class="specs-grid">
					<div class="spec-item"><span class="emoji">🆔</span><span>ID: {{ product.getId() }}</span></div>
					<div class="spec-item"><span class="emoji">💶</span><span>Prix: {{ product.getPrice() }} €</span>
					</div>
					<div class="spec-item"><span class="emoji">📦</span><span>Stock: {{ product.getStock() }}</span>
					</div>
				</div>

				<div class="actions">
					<a href="/product" class="view" aria-label="Retour">🔙 Retour</a>
					<a href="/product/edit/{{ product.getId() }}" class="edit" aria-label="Modifier">✏️ Modifier</a>
					<form action="/product/delete/{{ product.getId() }}" method="post" style="margin:0;">
						<button type="submit" class="delete" onclick="return confirm('Supprimer ce produit ?')"
							aria-label="Supprimer">🗑️ Supprimer</button>
					</form>
				</div>
			</div>
		</div>
	</main>
</div>
{% endblock %}